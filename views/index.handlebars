<div class="row">
  <div class="col-md-4 uneaten">
    <h3>Burgers to Eat</h3>
    <form action="/burger/eat/{{id}}" method="POST">
      {{#each burgers}}

      <p>{{this.id}}. {{this.burger_name}}
        <button type="submit" class="btn btn-warning btn-s" id="devour">Devour</button>
      </p>
      {{/each}}
    </form>
  </div>
  <div class="col-md-4" id="sign">
    <img src="../public/assets/img/burger.jpg" style="width:300px; height:300px;">
    <h1>Eat-Da-Burger!</h1>
  </div>
  <div class="col-md-4"></div>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4" id="addBurger">
    <form method="POST" action="/create">
      <p>Enter what you are hungry for then click 'Add a Burger'.</p>
      <textarea class="form-control"></textarea>
      <button type="submit" class="btn btn-light" id="submit">Add a Burger</button>
    </form>
  </div>
</div>